{% apply inky_to_html|inline_css(
    source('@styles/foundation-emails.css'),
    source('@styles/email.css'),
    )
%}
<container>

    <row class="header">
        <columns>
            <center>
                <a href="#">
                    <img src="{{ email.image('@images/Wallace-482x298.jpg') }}" class="logo" alt="The Template52" >
                </a>
            </center>
        </columns>
    </row>

    {% block content %}
    {% endblock %}

    <row class="footer">
        <columns>
            <p>Cheers,</p>
            <p>Your friendly <em>Template52 Team</em></p>
        </columns>
    </row>

    <spacer size="30"></spacer>

    <row class="bottom">
        <columns>
            <center>
                <spacer size="20"></spacer>
                <div>
                    Sent with ❤️ from the friendly folks at The Template52
                </div>
            </center>
        </columns>
    </row>
</container>

{% endapply %}