{% extends 'email/emailBase.html.twig' %}

{% block content %}

    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    Nice to meet you {{ email.toName | raw }}!
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>

    <spacer size="20"></spacer>

    <row>
        <columns>
            <p>
                An email has been sent that contains a link that you can click to reset your password.
                This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
            </p>
            <p>If you don't receive an email please check your spam folder or <a href="{{ path('forgot_password_request') }}">try again</a>.</p>
        </columns>
    </row>

    <row>
        <columns>
            <center>
                <button href="{{ url('homepage') }}">Ontdek de Template52 site!</button>
            </center>
        </columns>
    </row>

    <hr>

    <spacer size="10"></spacer>


{% endblock %}