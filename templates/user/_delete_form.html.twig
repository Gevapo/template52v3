<form method="post" action="{{ path('user_delete', {'id': user.id}) }}">

    <div class="row mt-4">
        <div class="col-8">

            <div class="row">
                <div class=" col-sm-12 col-md-12 col-lg-6 col-xl-3">
{#                <div class="col-3">#}

                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button class="btn btn-block btn-danger" data-toggle="confirmation">
                        <i class="fa fa-trash-alt" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;{{ button_label|default('Verwijder') }}
                    </button>

                </div>
            </div>

        </div>
    </div>

</form>

