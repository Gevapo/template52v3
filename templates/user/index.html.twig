{% extends 'base.html.twig' %}

{% block title %} | Gebruikers{% endblock %}

{% block body %}

    {% include 'flash/flash.html.twig' %}

    <div class="container">
        <div class="bs-docs-section clearfix">

            <div class="row">
                <div class=" col-12">

                    <h1 class="mt-3 mb-4">Gebruikers</h1>

                    <div class="row">
                        <div class="col-2 mb-3">
                            <a class="btn btn-info btn-block" href="{{ path('user_new') }}">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Nieuw
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">

                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Voornaam</th>
                                        <th>Achternaam</th>
                                        <th>Rol</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.voornaam }}</td>
                                            <td>{{ user.achternaam }}</td>
                                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                            <td class="text-center">
                                                <a href="{{ path('user_edit', {'id': user.id}) }}">
                                                    <span class="fa fa-pencil-alt text-info"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9">no records found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
