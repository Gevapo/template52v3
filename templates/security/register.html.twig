    <form class="form-signin" method="post" novalidate>
        <fieldset>

            <p>Vul je e-mailadres in en kies een wachtwoord.<br>
                Hiermee kan je aanmelden op onze Template52 site.</p>

            {% if app.user %}
                <div class="mb-3">
                    U bent als {{ app.user.username }} aangemeld, <a href="{{ path('logout') }}">Logout</a>
                </div>
            {% endif %}

{#            {% if error == 'email_error' %}{{ error }}{% endif %}#}
            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" name="email" class="form-control {% if error == 'email_error' %}is-invalid{% endif %}" id="inputEmail" aria-describedby="emailHelp" placeholder="E-mailadres" required autofocus>
                <small id="emailHelp" class="form-text text-muted">Uw gegevens worden met niemand gedeeld.</small>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" class="form-control {% if error == 'password_error' %}is-invalid{% endif %}" id="inputPassword" placeholder="Wachtwoord" required>
            </div>

            <div class="custom-control custom-checkbox">
                <input type="checkbox" name="privacy" class="custom-control-input {% if error == 'privacy_error' %}is-invalid{% endif %}" id="privacy" required>
                <label class="custom-control-label" for="privacy"> Ik heb de <a href="#" {% if error == 'privacy_error' %}class="text-danger"{% endif %}>privacyverklaring Template52</a>  gelezen.</label>
            </div>

        </fieldset>

        <div class="gvp-vert-sp-2"></div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Maak uw profiel aan</button>
        <div class="gvp-vert-sp-2"></div>
        <a href="{{ path('login') }}" class="btn btn-lg btn-outline-primary btn-block">Aanmelden</a>
    </form>

{% endblock %}

